#FROM golang:1.6.3-onbuild
FROM php:7.0-apache
RUN docker-php-source extract \
	# do important things \
	&& docker-php-source delete
COPY . /var/www/html/
WORKDIR /var/www/html/
EXPOSE 80
CMD [ "php", "./index.php" ,"apache2-foreground"]
